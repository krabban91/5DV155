<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Greed">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear"
            android:id="@+id/gridLayout"
            android:rowCount="2"
            android:columnCount="3"
            >

            <ImageButton
                android:id="@+id/imageButton00"
                android:background="@drawable/red1"
                android:layout_row="0"
                android:layout_column="0"/>
            <ImageButton
                android:background="@drawable/grey2"
                android:id="@+id/imageButton01"
                android:layout_row="0"
                android:layout_column="1" />
            <ImageButton
                android:background="@drawable/white3"
                android:id="@+id/imageButton02"
                android:layout_row="0"
                android:layout_column="2" />
            <ImageButton
                android:background="@drawable/red4"
                android:id="@+id/imageButton10"
                android:layout_row="1"
                android:layout_column="0" />
            <ImageButton
                android:background="@drawable/grey5"
                android:id="@+id/imageButton11"
                android:layout_row="1"
                android:layout_column="1" />
            <ImageButton
                android:background="@drawable/white6"
                android:id="@+id/imageButton12"
                android:layout_row="1"
                android:layout_column="2" />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:text="Save"
                android:enabled="false"
                android:id="@+id/greed_save"/>
            <Button
                android:text="Score"
                android:id="@+id/greed_score"/>
            <Button
                android:text="Throw"
                android:id="@+id/greed_throw"/>
        </GridLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        >
        <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewScore" />
        <TextView android:text="9001" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreValue"/>

    </LinearLayout>

</RelativeLayout>
